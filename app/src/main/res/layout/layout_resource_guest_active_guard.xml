<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Ll_Lr_GuestActiveGuard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@drawable/background_round_corner_rectangle"
    android:orientation="vertical"
    android:elevation="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:gravity="center"
            android:id="@+id/Tv_Lr_GuestActiveGuard_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="NAME"
            android:textSize="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Tv_Lr_GuestActiveGuard_TimeIn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Time in"
                android:textSize="16dp" />

            <Button
                android:id="@+id/Btn_Lr_GuestActiveGuard_AllowExit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@drawable/background_round_corner_rectangle"
                android:backgroundTint="@color/background_main_4"
                android:drawableRight="@drawable/ic_baseline_exit_to_app_black_24"
                android:paddingRight="8dp"
                android:text="ALLOW EXIT" />
        </LinearLayout>

        <Button
            android:layout_marginRight ="8dp"
            android:layout_marginLeft="8dp"
            android:id="@+id/Tv_Lr_GuestActiveGuard_CallCitizen"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:background="@drawable/background_round_corner_rectangle"
            android:backgroundTint="@color/text_color_main_1"
            android:drawableStart="@drawable/ic_baseline_call_24"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:text="CALL FLAT" />
    </LinearLayout>

    <TextView
        android:id="@+id/Tv_Lr_GuestActiveGuard_CallGuest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Call Guest" />

</LinearLayout>