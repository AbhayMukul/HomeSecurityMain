<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_1"
    android:orientation="vertical"
    tools:context=".citizen.Activity.SettingActivityCitizen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:cardElevation="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="16dp"
                android:paddingTop="8dp"
                android:text="SETTINGS"
                android:textSize="24dp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="Account Settings"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Tv_SettingActivityCitizen_ChangePhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:drawableLeft="@drawable/ic_baseline_call_24"
                        android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                        android:drawablePadding="8dp"
                        android:elevation="16dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:gravity="left"
                        android:padding="16dp"
                        android:paddingTop="8dp"
                        android:text="CHANGE PHONE NUMBER"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/Tv_SettingActivityCitizen_ChangePassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:drawableLeft="@drawable/ic_password"
                        android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                        android:drawablePadding="8dp"
                        android:elevation="16dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:gravity="left"
                        android:padding="16dp"
                        android:paddingTop="8dp"
                        android:text="CHANGE PASSWORD"
                        android:textStyle="bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/Tv_SettingActivityCitizen_Exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="32dp"
        android:background="@drawable/background_round_corner_rectangle"
        android:backgroundTint="@color/black"
        android:clickable="false"
        android:drawableRight="@drawable/ic_baseline_exit_to_app_24"
        android:drawablePadding="8dp"
        android:elevation="16dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="18dp"
        android:text="Exit"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold" />
</RelativeLayout>