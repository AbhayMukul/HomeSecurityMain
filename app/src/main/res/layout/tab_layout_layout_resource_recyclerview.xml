<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/background_4"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/Tb_Lr_Rv"/>

    <LinearLayout
        android:layout_marginTop="32dp"
        android:id="@+id/Tb_Lr_Ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/Tb_Lr_Iv"
            android:layout_gravity="center"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:src="@drawable/ic_sorry" />
        <TextView
            android:id="@+id/Tb_Lr_Tv"
            android:layout_marginTop="32dp"
            android:textSize="24dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="It seems as if you are not yet a part of another flat yet"/>

    </LinearLayout>

</LinearLayout>