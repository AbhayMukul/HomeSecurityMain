<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Login.Activity.Common.SplashScreen">

    <LinearLayout
        android:id="@+id/Ll_SplashScreen"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="120dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/Cv_SplashScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="48dp"
            app:cardElevation="8dp">

            <ImageView
                android:padding="16dp"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_home"
                android:layout_height="wrap_content" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_marginTop="16dp"
            style="@style/RegularCondensed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HOMESECURITY"
            android:textStyle="bold"
            android:textColor="@color/text_color_main_2"
            android:gravity="center"
            android:textSize="32dp"/>

    </LinearLayout>

</RelativeLayout>