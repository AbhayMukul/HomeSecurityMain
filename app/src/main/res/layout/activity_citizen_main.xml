<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background_1"
    android:layout_height="match_parent"
    tools:context=".citizen.Activity.CitizenMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:paddingBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:weightSum="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_weight="0.8"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hi, "
                            android:textSize="32dp" />

                        <TextView
                            android:id="@+id/Tv_CitizenMainActivity_UserName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Abhay"
                            android:textSize="32dp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/Iv_CitizenMainActivity_Setting"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="16dp"
                        android:layout_weight="0.2"
                        android:src="@drawable/ic_baseline_settings_24" />
                </LinearLayout>

                <TextView
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Welcome to your Home's smart Application" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:backgroundTint="@color/background_1"
            android:background="@drawable/background_round_corner_rectangle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:id="@+id/Rv_CitizenMainActivity"/>

    </LinearLayout>

</RelativeLayout>