<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_4"
    tools:context=".guard.Activity.GuestListVerificationActivity">

    <LinearLayout
        android:backgroundTint="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="160dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/background_round_corner_rectangle"
        android:padding="16dp"
        android:elevation="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="GUESTLIST VERIFICATION"
            android:textColor="@color/background_main_4"
            android:textSize="24dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/Ed_GuestListVerificationActivity_Flat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:hint="Flat" />

        <EditText
            android:id="@+id/Ed_GuestListVerificationActivity_Code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:hint="Code" />

        <Button
            android:id="@+id/Btn_GuestListVerificationActivity_Verify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@color/background_main_4"
            android:text="Verify" />
    </LinearLayout>

</RelativeLayout>