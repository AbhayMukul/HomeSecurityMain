<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_4"
    tools:context=".citizen.Activity.AddNewFamilyActivity">

    <androidx.cardview.widget.CardView
        android:backgroundTint="@color/background_main_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:cardElevation="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="NEW FAMILY MEMBER"
            android:textColor="@color/background_5"
            android:textSize="32dp" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:paddingTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="160dp"
        android:layout_marginRight="32dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:padding="8dp"
            app:cardElevation="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/Ed_AddNewFamilyActivity_Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:hint="Name" />

                <EditText
                    android:id="@+id/Ed_AddNewFamilyActivity_Phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:hint="Phone" />

                <ToggleButton
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Tb_AddNewFamilyActiviy_Admin"
                    android:textOn="Admin"
                    android:textOff="Not Admin"
                    android:layout_gravity="center"/>

                <Button
                    android:id="@+id/Btn_AddNewFamilyActivity_Verify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@color/background_main_2"
                    android:text="Verify" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


</RelativeLayout>